# EHR Portal Environment Variables - MOCK API MODE

# Application Configuration
VITE_APP_NAME=EHR Portal
VITE_APP_VERSION=0.0.0

# API Configuration
# Leave empty for mock API mode (MSW)
VITE_API_BASE_URL=
VITE_API_TIMEOUT=30000

# Mock Service Worker (for development)
# Set to 'true' to enable mock API, 'false' to use real API
VITE_ENABLE_MSW=true

# Authentication
VITE_AUTH_TOKEN_KEY=ehr_auth_token
VITE_AUTH_SESSION_TIMEOUT=3600000

# Feature Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_OFFLINE_MODE=true

# FHIR Server Configuration (when using real API)
VITE_FHIR_SERVER_URL=https://fhir.example.com/api
VITE_FHIR_VERSION=4.0.1

# Logging
VITE_LOG_LEVEL=info
VITE_ENABLE_AUDIT_LOG=true

# Internationalization
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,hi

# Theme
VITE_DEFAULT_THEME=light

# Security
# Note: Never commit actual secrets to version control
VITE_ENCRYPTION_KEY=your-encryption-key-here
VITE_CSP_ENABLED=true

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Build Configuration
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_ANALYZE=false
